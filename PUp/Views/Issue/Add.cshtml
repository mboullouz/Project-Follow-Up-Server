@model PUp.ViewModels.AddIssueViewModel
@{
    ViewBag.Title = "Add an issue";
}


<div class="panel">
    <div class="panel-heading">
        <div class="panel-title">
            <b>New Issue</b>
        </div>

    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label class="control-label">Status</label>
                @Html.DropDownListFor(m => m.Status, Model.StatusList, "Select one")
            </div>

            <div class="form-group">
                <label class="control-label">Description</label>

                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description)

            </div>

            <div class="form-group">
                <label class="control-label">Related area</label>

                @Html.TextAreaFor(m => m.RelatedArea, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.RelatedArea)

            </div>

            @Html.HiddenFor(m => m.IdProject)
            <input type="submit" value="Save" class="btn btn-primary" />

            //  @Html.ActionLink("Create project", "CreerCompte")
        }
    </div>

</div>


 

