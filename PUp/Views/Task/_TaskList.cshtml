@model List<PUp.Models.Entity.TaskEntity> 
<table class="table">
    <thead>
        <tr>
            <td>Title</td>
            <td>Done</td>
            <td>Key factor</td>
            <td style="width:13%;">Added at</td>
            <td>Assigned to</td>
            <td>Description</td>

            <td style="width:2%;"></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.OrderByDescending(t=>t.AddAt))
        {
            <tr class="v @(@task.Done ? "done" : " ")">
                <td> @task.Title</td>
                <td>
                    @if (task.Done)
                    {
                        @task.FinishAt
                    }
                    else { <b>In progress</b>}
                </td>
                <td> @(task.KeyFactor ? "Yes" : "No")</td>
                <td>@task.AddAt.ToString("HH:mm d-MMM yyyy ")</td>
                <td>
                    @task.Executor.Name
                </td>
                <td> @task.Description</td>
                <td>
                    <div class="dropdown pull-right">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dd-ctrl-tasks" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            <i class="fa fa-cog"></i>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dd-ctrl-tasks">
                          
                            @if (!task.Done)
                            {
                                <li>
                                    @Html.ActionLink("Mark done", "SetDone", "Task", new { id = task.Id }, new { @class = "btn" })
                                </li>
                                <li>
                                    @Html.ActionLink("Edit", "Edit", "Task", new { id = task.Id}, new { @class = "btn" })
                                </li>
                            }
                            else
                            {
                                <li>
                                    @Html.ActionLink("Mark undone", "MarkUndone", "Task", new { id = task.Id }, new { @class = "btn" })
                                </li>
                            }
                            <li>
                                @Html.ActionLink("Delete", "Delete", "Task", new { id = task.Id }, new { @class = "btn" })
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

