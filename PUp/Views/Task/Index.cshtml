@model PUp.ViewModels.Task.TaskViewModel 
@{
    ViewBag.Title = "Tasks list";
}
 
    <div class="col-md-12">
         
        <div class="row">
            <a href="@Url.Action("Index", "Task", new { id = Model.Project.Id } )" title="Add task" class="btn btn-primary">
                <i class="fa fa-plus"> </i> New Task
            </a>
            @Html.Partial("_ProjectHeader",Model.Project)
        </div>

        <br />

        <div class="row">
        
        <div class="panel">
            <div class="panel-heading">
                <div class="panel-title">
                    <b>Active tasks</b>
                </div>
            </div>
            <div class="panel-body">
                @Html.Partial("_TaskList", Model.ActiveTasks)
            </div>
        </div>

        <div class="panel">
            <div class="panel-heading">
                <div class="panel-title">
                    <b>Deleted tasks</b>
                </div>
            </div>
            <div class="panel-body">
                @Html.Partial("_TaskList", Model.DeletedTasks)
            </div>
        </div>
     </div>
    </div>
 
